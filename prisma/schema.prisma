generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model GuildMember {
  id          String   @id @default(cuid())
  name        String   @unique
  level       Int
  vocation    String
  status      String    // 'online' | 'offline'
  lastSeen    DateTime?  // Para calcular tempo online
  observation String?   // Para observações do usuário
  
  @@map("guild_members")
}

model MemberMessage {
  id      Int    @id @default(autoincrement())
  name    String @unique
  message String
  updatedAt DateTime @updatedAt

  @@map("member_messages")
}